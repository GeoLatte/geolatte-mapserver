<!DOCTYPE WMT_MS_Capabilities SYSTEM
        "http://schemas.opengis.net/wms/1.1.1/WMS_MS_Capabilities.dtd"
        [<!ELEMENT VendorSpecificCapabilities EMPTY>]>

<?xml version='1.0' encoding="UTF-8" standalone="no" ?>

<WMT_MS_Capabilities version="1.1.1" updateSequence="0">

    <Service>

        <Name>OGC:WMS</Name>

        <Title>WMS2TMS Adapter</Title>

        <Abstract></Abstract>
        <KeywordList>
            <Keyword>images</Keyword>
        </KeywordList>
        <OnlineResource xmlns:xlink="http://www.w3.org/1999/xlink" xlink:type="simple"
                        xlink:href="http://10.138.28.185:8080/jmapserv"/>
        <!-- Contact information -->
        <ContactInformation>
            <ContactPersonPrimary>
                <ContactPerson></ContactPerson>
                <ContactOrganization></ContactOrganization>
            </ContactPersonPrimary>
            <ContactPosition></ContactPosition>
            <ContactAddress>
                <AddressType></AddressType>
                <Address></Address>
                <City></City>
                <StateOrProvince></StateOrProvince>
                <PostCode></PostCode>
                <Country></Country>
            </ContactAddress>
            <ContactVoiceTelephone></ContactVoiceTelephone>
            <ContactFacsimileTelephone></ContactFacsimileTelephone>
            <ContactElectronicMailAddress></ContactElectronicMailAddress>
        </ContactInformation>
        <!-- Fees or access constraints imposed. -->
        <Fees>none</Fees>
        <AccessConstraints>none</AccessConstraints>
    </Service>
    <Capability>
        <Request>
            <GetCapabilities>
                <Format>application/vnd.ogc.wms_xml</Format>
                <DCPType>
                    <HTTP>
                        <Get>
                            <!-- The URL here for invoking GetCapabilities using HTTP GET
                 is only a prefix to which a query string is appended. -->
                            <OnlineResource xmlns:xlink="http://www.w3.org/1999/xlink"
                                            xlink:type="simple"
                                            xlink:href="http://10.138.28.185:8080/jmapserv"/>
                        </Get>
                        <Post>
                            <!-- The URL here for invoking GetCapabilities using HTTP POST
                   includes the complete address to which a query would be sent in
                   XML format.  This is here for future expansion; no POST encoding
             has yet been defined. -->
                            <OnlineResource xmlns:xlink="http://www.w3.org/1999/xlink"
                                            xlink:type="simple"
                                            xlink:href="http://10.138.28.185:8080/jmapserv"/>
                        </Post>
                    </HTTP>
                </DCPType>
            </GetCapabilities>
            <GetMap>
                <Format>image/png</Format>
                <Format>image/jpeg</Format>
                <DCPType>
                    <HTTP>
                        <Get>
                            <!-- The URL here for invoking GetCapabilities using HTTP GET
                 is only a prefix to which a query string is appended. -->
                            <OnlineResource xmlns:xlink="http://www.w3.org/1999/xlink"
                                            xlink:type="simple"
                                            xlink:href="http://10.138.28.185:8080/jmapserv"/>
                        </Get>
                    </HTTP>
                </DCPType>
            </GetMap>
        </Request>
        <Exception>
            <Format>application/vnd.ogc.se_xml</Format>
            <Format>application/vnd.ogc.se_inimage</Format>
            <Format>application/vnd.ogc.se_blank</Format>
        </Exception>
        <Layer>
            <!-- This parent layer has a Name and can therefore be requested from a Map Server, yielding a map of all subsidiary layers. -->
            <Name>basic</Name>
            <Title>basic</Title>
            <!-- See the spec to learn how some characteristics are inherited by
          subsidiary layers. -->
            <SRS>EPSG:4326</SRS>
            <LatLonBoundingBox minx="-180" miny="-90" maxx="180" maxy="90"/>
            <BoundingBox SRS="EPSG:4326"
                         minx="-180" miny="-90" maxx="180" maxy="90" resx="0.001" resy="0.001"/>
        </Layer>
    </Capability>
</WMT_MS_Capabilities>
